.menu 
  .menu-container
    .login-container
      -if user_signed_in?
        =link_to "Sign out", destroy_user_session_path, :method => :delete, :class => 'login-item'
        -if current_user.admin?
          =link_to "Admin Panel", admin_dashboard_path, :class => 'login-item'
      -else
        =link_to "Sign in", new_user_session_path, :class => 'login-item'
        =link_to "Sign up", new_user_registration_path, :class => 'login-item'
    .menu-logo-container
      .logo= image_tag "logo.png"
      .menu-title 
    .menu-item-container
      .menu-category
        = link_to 'Home', '/', :class => 'menu-item', :id => 'menu-home'
      #cat-about.menu-category
        = link_to 'About', '/categories/about/about', :class => 'menu-item', :id => 'menu-about'
        .menu-dropdown
          .drop-top.drop-item= link_to 'About', '/categories/about/about'
          .drop-item= link_to 'About Ari', '/categories/about/about_ari_goldfield'
          .drop-bottom.drop-item= link_to 'About Rose', '/categories/about/about_rose_goldfield'
      .menu-category
        = link_to 'Events', '/events', :class => 'menu-item', :id => 'menu-events'
      .menu-category
        = link_to 'Books', '/books', :class => 'menu-item', :id => 'menu-books'
      .menu-category
        = link_to 'Photos', '/albums', :class => 'menu-item', :id => 'menu-photos'
      .menu-category
        = link_to 'Downloads', '/downloads', :class => 'menu-item', :id => 'menu-downloads'
      .menu-category
        = link_to 'Bulletin', '/bulletin', :class => 'menu-item', :id => 'menu-bulletin'
      #cat.menu-category
        = link_to 'Other', '/categories', :class => 'menu-item', :id => 'menu-category'
        .menu-dropdown
          - Category.all.each do |category|
            .drop-item= link_to "#{category.name}", {:controller => 'categories', :action => 'show', :id => "#{category.id}"}
      .menu-category
        = link_to 'Support', '/support', :class => 'menu-item', :id => 'menu-support'
      .menu-category
        = link_to 'Contact', '/contact', :class => 'menu-item', :id => 'menu-contact'
