<%= stylesheet_link_tag 'style' %>
<div class='wrapper'>
<div class='container'>
  <%= render :partial => "/layouts/menu"%>

<%= render :partial => 'forem/forums/head', :locals => { :forum => @topic.forum } %>

<h2><%= t("forem.post.edit", :post => @post) %></h2>

<%= simple_form_for [forem, @topic, @post] do |f| %>
  <%= render :partial => "form", :locals => { :f => f } %>
  <%= f.submit t("forem.post.buttons.edit"), :class => "btn btn-primary" %>
<% end %>
</div>
<%= render :partial => "layouts/footer"%>
</div>
